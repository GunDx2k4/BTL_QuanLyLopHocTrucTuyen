<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BTL_QuanLyLopHocTrucTuyen</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BTL_QuanLyLopHocTrucTuyen.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="d-flex">
        <aside class="d-none d-md-flex flex-column p-3 bg-white border-end" style="width:250px; min-height:100vh;">
            <a asp-area="" asp-controller="Home" asp-action="Index"
                class="d-flex align-items-center mb-3 text-decoration-none">
                <img src="~/favicon.ico" alt="logo" width="36" height="36" />
                <div class="ms-2">
                    <div class="fw-bold text-dark">Lo` Mo` Se'</div>
                    <small class="text-muted">Developed by WNC.G06</small>
                </div>
            </a>

            <div class="d-flex align-items-center justify-content-between mb-3">
                <div class="d-flex align-items-center">
                    <img src="~/user.svg" alt="user" width="48" height="48" class="rounded-circle bg-light" />
                    <div class="ms-2 d-none d-lg-block">
                        <div class="small text-muted">Xin chào,</div>
                        <div class="fw-medium">@User?.Identity?.Name</div>
                    </div>
                </div>
            </div>

            <nav class="nav flex-column">
                <a asp-controller="Manager" asp-action="Index" class="nav-link d-flex align-items-center py-2">
                    Home
                </a>
                <a asp-controller="Manager" asp-action="CourseManager" class="nav-link d-flex align-items-center py-2">
                    Courses
                </a>
                <a asp-controller="Manager" asp-action="StudentManager" class="nav-link d-flex align-items-center py-2">
                    Students
                </a>
                <a asp-controller="Manager" asp-action="InstructorManager" class="nav-link d-flex align-items-center py-2">
                    Instructors
                </a>
            </nav>

            <div class="mt-auto">
                <form onsubmit="logout(event)">
                    <button type="submit" class="btn btn-danger w-100 mt-3">Đăng xuất</button>
                </form>
            </div>

            <div class="mt-3 small text-muted">
                <div>© 2025 WNC.G06</div>
            </div>
        </aside>

        <div class="flex-grow-1">
            <div class="container-fluid px-6">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_ModalMessage")


    <script>
        const logout = (event) => {
            event.preventDefault();
            fetch('api/authen/logout', { method: 'POST' })
                .then(response => {
                    if (response.ok) {
                        window.location.href = '/';
                    } else {
                        alert('Logout failed. Please try again.');
                    }
                })
                .catch(error => {
                    console.error('Error during logout:', error);
                    alert('An error occurred. Please try again.');
                });
        };

        const showModal = (message, redirectUrl = null) => {
            $('#modalBody').text(message);
            const modalEl = $('#modalMessage');
            const modal = new bootstrap.Modal(modalEl);

            modalEl.on('hidden.bs.modal', () => {
                if (redirectUrl) {
                    window.location.href = redirectUrl;
                }
            });

            modal.show();
        };
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>\
    <script src="~/js/Manager/modalHandler.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>