<div class="modal fade" id="modalCourseDetails" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết Khoá học: <span id="detailsCourseName"></span></h5>
                <div class="ms-auto">
                    <button type="button" id="detailsEditBtn" class="btn btn-warning btn-sm text-dark me-1">Sửa</button>
                    <button type="button" id="detailsDeleteBtn" class="btn btn-danger btn-sm">Xóa</button>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Giảng viên</dt><dd class="col-sm-8" id="detailsCourseInstructor"></dd>
                            <dt class="col-sm-4">Bắt đầu</dt><dd class="col-sm-8" id="detailsCourseBegin"></dd>
                            <dt class="col-sm-4">Kết thúc</dt><dd class="col-sm-8" id="detailsCourseEnd"></dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <h6>Mô tả</h6>
                        <p id="detailsCourseDescription" class="small text-muted"></p>
                    </div>
                </div>

                <hr />

                <h6>Danh sách học viên</h6>
                <div class="table-responsive mb-3">
                    <table class="table table-sm">
                        <thead>
                            <tr><th>Tên</th><th>Email</th><th>Đăng ký</th><th>Hành động</th></tr>
                        </thead>
                        <tbody id="detailsEnrolledBody">
                            <!-- sẽ được fill bởi JS -->
                        </tbody>
                    </table>
                </div>

                <hr />
                <h6>Thêm học viên vào khóa học</h6>
                <div id="detailsAlert" class="alert alert-danger d-none"></div>
                <div class="mb-2">
                    <div class="input-group">
                        <select id="detailsStudentSelect" class="form-select">
                            <option value="">-- Chọn học viên hiện có trong tenant --</option>
                        </select>
                        <button id="detailsEnrollBtn" type="button" class="btn btn-success">Thêm</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
