@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero section -->
<section class="py-5">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold text-dark mb-3">
                    Quản Lý Lớp Học Trực Tuyến<br />Hiệu Quả Và Tiện Lợi
                </h1>
                <p class="lead text-muted mb-4">
                    Ứng dụng hỗ trợ giảng viên và sinh viên trong việc tổ chức, điểm danh, chia sẻ tài liệu,
                    và quản lý điểm số mọi lúc mọi nơi — chỉ với vài thao tác đơn giản.
                </p>

                <div class="d-flex gap-3">
                    <a asp-controller="Account" asp-action="Register"
                       class="btn btn-primary btn-lg px-4">Bắt đầu ngay</a>
                    <a href="#features" class="btn btn-outline-primary btn-lg px-4">Tìm hiểu thêm</a>
                </div>
            </div>

            <div class="col-lg-6 mt-4 mt-lg-0 text-center">
                <img src="~/image.png" alt="mockup" class="img-fluid rounded shadow"
                     style="max-height: 320px; object-fit: cover;" />
            </div>
        </div>
    </div>
</section>

<!-- Tính năng nổi bật -->
<section id="about" class="py-5">
    <div class="container text-center">
        <p class="text-primary fw-bold small text-uppercase mb-2">Tính năng nổi bật</p>
        <h2 class="fw-bold mb-5">Kết nối giảng viên và sinh viên dễ dàng hơn</h2>

        <div class="row gy-4">
            @{
                var features = new[]
                {
                    new { Title = "Quản lý lớp học", Desc = "Tạo, chỉnh sửa và quản lý các lớp học nhanh chóng. Theo dõi tiến độ học tập mọi lúc mọi nơi." },
                    new { Title = "Điểm danh & chấm điểm", Desc = "Ghi nhận chuyên cần, nhập điểm và xuất báo cáo tự động. Tiết kiệm thời gian cho giảng viên." },
                    new { Title = "Chia sẻ tài liệu", Desc = "Tải lên và quản lý tài liệu giảng dạy. Học viên có thể truy cập và tải về dễ dàng." },
                    new { Title = "Hỗ trợ đa nền tảng", Desc = "Truy cập trên máy tính, máy tính bảng hoặc điện thoại di động với giao diện thân thiện." }
                };
            }

            @foreach (var item in features)
            {
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="px-3">
                        <img src="~/image.png" width="72" height="72" class="mb-3" alt="icon" />
                        <p class="text-muted small">
                            <strong>@item.Title</strong><br />@item.Desc
                        </p>
                    </div>
                </div>
            }
        </div>

        <div class="mt-5">
            <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Register">
                Dùng thử miễn phí
            </a>
        </div>
    </div>
</section>

<!-- Bảng giá -->
<section id="pricing" class="py-5">
    <div class="container text-center">
        <p class="text-primary fw-bold small text-uppercase mb-2">Bảng giá</p>
        <h2 class="fw-bold mb-3">Chọn gói phù hợp với nhu cầu của bạn</h2>
        <p class="text-muted mb-5">Giá minh bạch, dễ hiểu — có thể nâng cấp hoặc hủy bất cứ lúc nào.</p>

        <div class="row g-4">
            <!-- Gói Cơ Bản -->
            <div class="col-md-4">
                <div class="card h-100 border">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Cơ Bản</h5>
                        <p class="text-muted small">Phù hợp cho sinh viên hoặc cá nhân học tập.</p>
                        <h2 class="mb-0 mt-3">Miễn phí</h2>
                        <p class="small text-muted mb-4">Không giới hạn thời gian sử dụng</p>

                        <ul class="text-start small flex-grow-1 list-unstyled mb-4">
                            <li>✔️ Tạo và tham gia lớp học</li>
                            <li>✔️ Truy cập tài liệu học tập</li>
                            <li>✔️ Nộp bài tập & xem điểm</li>
                        </ul>

                        <a class="btn btn-outline-primary mt-auto" asp-controller="Account" asp-action="Register">
                            Bắt đầu ngay
                        </a>
                    </div>
                </div>
            </div>

            <!-- Gói Nâng Cao -->
            <div class="col-md-4">
                <div class="card h-100 border border-primary shadow-sm">
                    <div class="card-body d-flex flex-column position-relative">
                        <span class="badge bg-primary position-absolute top-0 start-50 translate-middle mt-2">Phổ biến</span>
                        <h5 class="card-title mt-4">Nâng Cao</h5>
                        <p class="text-muted small">Dành cho giảng viên hoặc trung tâm đào tạo nhỏ.</p>
                        <h2 class="mb-0 mt-3">149.000₫</h2>
                        <p class="small text-muted mb-4">Mỗi tháng (thanh toán hàng năm)</p>

                        <ul class="text-start small flex-grow-1 list-unstyled mb-4">
                            <li>✔️ Quản lý lớp học nâng cao</li>
                            <li>✔️ Theo dõi điểm danh & kết quả học tập</li>
                            <li>✔️ Tạo bài tập & đánh giá tự động</li>
                        </ul>

                        <a class="btn btn-primary mt-auto" asp-controller="Account" asp-action="Register">
                            Dùng thử miễn phí
                        </a>
                    </div>
                </div>
            </div>

            <!-- Gói Doanh Nghiệp -->
            <div class="col-md-4">
                <div class="card h-100 border">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Doanh Nghiệp</h5>
                        <p class="text-muted small">Dành cho trường học, học viện hoặc tổ chức lớn.</p>
                        <h2 class="mb-0 mt-3">Liên hệ</h2>
                        <p class="small text-muted mb-4">Tùy chỉnh theo nhu cầu của tổ chức</p>

                        <ul class="text-start small flex-grow-1 list-unstyled mb-4">
                            <li>✔️ Quản lý nhiều giảng viên & lớp học</li>
                            <li>✔️ Báo cáo thống kê & xuất dữ liệu</li>
                            <li>✔️ Hỗ trợ kỹ thuật 24/7 & triển khai riêng</li>
                        </ul>

                        <a class="btn btn-outline-primary mt-auto" asp-controller="Home" asp-action="Contact">
                            Liên hệ tư vấn
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Đội ngũ -->
<section id="contact" class="py-5">
    <div class="container text-center">
        <p class="text-primary fw-bold small text-uppercase mb-2">Đội ngũ của chúng tôi</p>
        <h2 class="fw-bold mb-4">Những người đứng sau sự thành công của <span class="text-primary">Lo` Mo` Se’</span></h2>
        <p class="text-muted mb-5">
            Chúng tôi là một tập thể đam mê sáng tạo và nỗ lực không ngừng để mang lại giá trị tốt nhất cho khách hàng.
        </p>

        <div class="row g-4">
            @{
                var team = new[]
                {
                    new { Name = "Văn Phúc", Role = "Xây dựng chức năng giảng viên" },
                    new { Name = "Xuân Dũng", Role = "Xây dựng chức năng quản lý và quản trị" },
                    new { Name = "Xuân Đạt", Role = "Xây dựng chức năng học viên" }
                };
            }

            @foreach (var member in team)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm h-100 text-center p-4">
                        <img src="~/image.png" alt="@member.Name" class="img-fluid rounded mb-3" style="height:260px;object-fit:cover;" />
                        <h5 class="fw-bold mb-1">@member.Name</h5>
                        <p class="text-muted mb-3">@member.Role</p>
                        <a href="#" class="btn btn-outline-primary btn-sm px-3">Liên hệ</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
