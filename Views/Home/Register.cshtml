@{
    ViewData["Title"] = "Register";
}

<div class="d-flex align-items-center justify-content-center min-vh-75 py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="card shadow-sm overflow-hidden border-0 rounded-3">
                    <div class="row g-0">
                        <!-- Cột hình minh họa -->
                        <div class="col-12 col-md-6 d-none d-md-flex align-items-center justify-content-center bg-light-subtle">
                            <div class="p-4 text-center">
                                <h4 class="fw-bold text-primary mb-2">Tạo tài khoản của bạn</h4>
                                <p class="text-muted">Tham gia hệ thống để bắt đầu quản lý lớp học hiệu quả hơn.</p>
                                <img src="~/image.png" alt="register-illustration"
                                     class="img-fluid mt-3"
                                     style="max-height:220px;object-fit:contain;"
                                     onerror="this.style.display='none'" />
                            </div>
                        </div>

                        <!-- Cột form đăng ký -->
                        <div class="col-12 col-md-6 bg-white">
                            <div class="card-body p-4">
                                <h5 class="card-title mb-3 text-center fw-semibold">Đăng ký tài khoản</h5>

                                <div id="registerAlert" class="alert alert-danger d-none small" role="alert"></div>

                                <form id="registerForm" onsubmit="register(event)" novalidate>
                                    <div class="mb-3">
                                        <label for="fullName" class="form-label">Họ và tên</label>
                                        <input type="text" class="form-control" id="fullName" name="fullName"
                                               placeholder="Nhập họ và tên của bạn" required />
                                    </div>

                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email"
                                               placeholder="abc@example.com" required />
                                    </div>

                                    <div class="mb-3">
                                        <label for="password" class="form-label">Mật khẩu</label>
                                        <input type="password" class="form-control" id="password" name="password"
                                               placeholder="Tạo mật khẩu" required />
                                    </div>

                                    <div class="mb-3">
                                        <label for="confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                                               placeholder="Nhập lại mật khẩu" required />
                                    </div>

                                    <div class="d-grid mb-3">
                                        <button type="submit" class="btn btn-primary fw-semibold">Tạo tài khoản</button>
                                    </div>

                                    <div class="text-center small">
                                        Đã có tài khoản? <a asp-controller="Home" asp-action="Login" class="fw-semibold">Đăng nhập</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
<script>
    const register = (event) => {
        event.preventDefault();

        const alertEl = $('#registerAlert')[0];
        alertEl.classList.add('d-none');

        const fullName = $('#fullName').val().trim();
        const email = $('#email').val().trim();
        const password = $('#password').val().trim();
        const confirmPassword = $('#confirmPassword').val().trim();

        if (!fullName || !email || !password || !confirmPassword) {
            alertEl.textContent = 'Vui lòng điền đầy đủ tất cả các trường.';
            alertEl.classList.remove('d-none');
            return;
        }

        if (password.length < 6) {
            alertEl.textContent = 'Mật khẩu phải có ít nhất 6 ký tự.';
            alertEl.classList.remove('d-none');
            return;
        }

        if (password !== confirmPassword) {
            alertEl.textContent = 'Mật khẩu xác nhận không khớp.';
            alertEl.classList.remove('d-none');
            return;
        }

        fetch('/api/authen/register', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ fullName, email, password, confirmPassword })
        })
        .then(async response => {
            const data = await response.json().catch(() => ({}));
            if (response.ok) {
                showModal("Đăng ký thành công!", "Login");
                return;
            }
            alertEl.textContent = data.message || 'Đăng ký thất bại. Vui lòng thử lại.';
            alertEl.classList.remove('d-none');
        })
        .catch(error => {
            console.error('Registration error:', error);
            alertEl.textContent = 'Đã xảy ra lỗi khi đăng ký. Vui lòng thử lại sau.';
            alertEl.classList.remove('d-none');
        });
    };
</script>
}
