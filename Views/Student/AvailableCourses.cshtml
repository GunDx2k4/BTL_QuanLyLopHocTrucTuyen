@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="mb-2">➕ Đăng ký khóa học</h2>
            <p class="text-muted">Tìm kiếm và đăng ký các khóa học phù hợp với bạn</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("MyCourses", "Student")" class="btn btn-primary">
                📖 Khóa học của tôi
            </a>
        </div>
    </div>

    <!-- Thống kê -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="alert alert-info" role="alert">
                <strong>📚 Có @ViewBag.TotalAvailable khóa học</strong> có thể đăng ký
            </div>
        </div>
    </div>

    <!-- Danh sách khóa học -->
    <div class="row">
        <div class="col-12 mb-3">
            <h4>📚 Danh sách khóa học</h4>
        </div>
    </div>

    <div class="row">
        @if(Model != null && Model.Count > 0)
        {
            @foreach(var course in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">@course.Name</h5>
                            @if(course.Status == BTL_QuanLyLopHocTrucTuyen.Models.Enums.ScheduleStatus.Planned)
                            {
                                <span class="badge bg-light text-dark">Sắp bắt đầu</span>
                            }
                            else if(course.Status == BTL_QuanLyLopHocTrucTuyen.Models.Enums.ScheduleStatus.Active)
                            {
                                <span class="badge bg-success">Đang mở</span>
                            }
                        </div>
                        <div class="card-body">
                            <p class="card-text text-muted mb-2">
                                <small>👨‍🏫 Giảng viên: @(course.Instructor?.FullName ?? "Chưa có")</small>
                            </p>
                            <p class="card-text mb-3">
                                @(course.Description ?? "Không có mô tả")
                            </p>

                            <div class="mb-2">
                                <small>📅 Bắt đầu: <strong>@course.BeginTime.ToString("dd/MM/yyyy")</strong></small>
                            </div>
                            <div class="mb-2">
                                <small>⏱️ Kết thúc: <strong>@course.EndTime.ToString("dd/MM/yyyy")</strong></small>
                            </div>
                            <div class="mb-3">
                                <small>👥 Đã đăng ký: <strong>@(course.Enrollments?.Count ?? 0) người</strong></small>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="button" 
                                        class="btn btn-success btn-sm flex-fill"
                                        onclick="enrollCourse('@course.Id', '@course.Name')">
                                    ✅ Đăng ký ngay
                                </button>
                                <a href="@Url.Action("CourseDetails", "Student", new { id = course.Id })" 
                                   class="btn btn-outline-primary btn-sm flex-fill">
                                    ℹ️ Chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    <h5>🎉 Bạn đã đăng ký tất cả các khóa học có sẵn!</h5>
                    <p class="mb-0">
                        Hiện tại không có khóa học nào để đăng ký. 
                        Vui lòng quay lại sau hoặc 
                        <a href="@Url.Action("MyCourses", "Student")">xem khóa học đã đăng ký</a>.
                    </p>
                </div>
            </div>
        }
    </div>

   

@section Scripts {
        <script>
            function enrollCourse(courseId, courseName) {
                if (!confirm('Bạn có chắc muốn đăng ký khóa học "' + courseName + '"?')) {
                    return;
                }

                // Hiển thị loading
                const btnEnroll = event.target;
                const originalText = btnEnroll.innerHTML;
                btnEnroll.disabled = true;
                btnEnroll.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Đang đăng ký...';

                // Gọi API
                fetch('/api/student/enroll', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ courseId: courseId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('✅ ' + data.message);
                        window.location.href = '@Url.Action("MyCourses", "Student")';
                    } else {
                        alert('❌ ' + data.message);
                        btnEnroll.disabled = false;
                        btnEnroll.innerHTML = originalText;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('❌ Có lỗi xảy ra khi đăng ký!');
                    btnEnroll.disabled = false;
                    btnEnroll.innerHTML = originalText;
                });
            }
        </script>
}
