@model BTL_QuanLyLopHocTrucTuyen.Models.Assignment
@{
    ViewData["Title"] = "Chỉnh sửa bài tập";
    Layout = "~/Views/Instructor/Shared/_InstructorLayout.cshtml";
}

<link rel="stylesheet" href="~/css/Instructor/Assignment/EditAssignment.css" asp-append-version="true" />

<!-- ========== CONTENT ========== -->
<div class="content-main">
    <h3><i class="bi bi-pencil-square me-2"></i>Chỉnh sửa bài tập</h3>

    <form id="assignmentForm" method="post" asp-action="EditAssignment" asp-controller="AssignmentInstructor" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- ====================== CHỌN BÀI HỌC ====================== -->
        <div class="mb-3 position-relative lesson-search-wrapper">
            <label class="form-label">Chọn bài học *</label>
            <div class="input-wrapper position-relative">
                <input type="text" id="lessonSearch" class="form-control pe-5"
                    placeholder="Nhập tên bài học để tìm..." autocomplete="off"
                    value="@Model.Lesson?.Title">
                <button type="button" id="clearLesson" class="btn-clear" title="Xóa lựa chọn">&times;</button>
            </div>

            <ul id="lessonDropdown"
                class="list-group position-absolute w-100 shadow-sm"
                style="display:none; z-index:1050; max-height:200px; overflow-y:auto;">
                @foreach (var lesson in ViewBag.Lessons)
                {
                    <li class="list-group-item list-group-item-action @(lesson.Id == Model.LessonId ? "active" : "")"
                        data-id="@lesson.Id">@lesson.Title</li>
                }
            </ul>

            <input type="hidden" name="LessonId" id="LessonId" value="@Model.LessonId" />
        </div>


        <!-- ====== TÊN BÀI TẬP ====== -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Tên bài tập *</label>
            <input asp-for="Title" class="form-control" placeholder="Nhập tên bài tập..." />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- ====== MÔ TẢ ====== -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" rows="5" class="form-control" placeholder="Nhập mô tả chi tiết (tùy chọn)..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- ====== LIÊN KẾT NGOÀI ====== -->
        <div class="mb-3">
            <label asp-for="ExternalFileUrl" class="form-label">Liên kết ngoài (Google Drive, PDF...)</label>
            <input asp-for="ExternalFileUrl" type="url" class="form-control" placeholder="Dán liên kết tài liệu..." />
            <span asp-validation-for="ExternalFileUrl" class="text-danger"></span>
        </div>

        <!-- ====== UPLOAD FILE TỪ MÁY ====== -->
        <div class="mb-3">
            <label asp-for="UploadFile" class="form-label">Tải tệp từ máy (PDF, DOCX, ZIP...)</label>
            <input asp-for="UploadFile" type="file" class="form-control" accept=".pdf,.doc,.docx,.zip,.rar" />
            <span asp-validation-for="UploadFile" class="text-danger"></span>
           @if (!string.IsNullOrEmpty(Model.UploadedFileUrl))
            {
                var fileExt = System.IO.Path.GetExtension(Model.UploadedFileName)?.ToLower();
                var iconClass = fileExt switch
                {
                    ".pdf" => "bi-file-earmark-pdf text-danger",
                    ".doc" or ".docx" => "bi-file-earmark-word text-primary",
                    ".zip" or ".rar" => "bi-file-earmark-zip text-warning",
                    _ => "bi-file-earmark text-secondary"
                };

                <div class="current-file mt-3 p-3 border rounded bg-light d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi @iconClass fs-4"></i>
                        <div>
                            <div class="fw-semibold">@Model.UploadedFileName</div>
                            <small class="text-muted">Tệp hiện tại đã tải lên</small>
                        </div>
                    </div>
                    <div>
                        <a href="@Model.UploadedFileUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-box-arrow-up-right"></i> Xem tệp
                        </a>
                    </div>
                </div>
            }

        </div>

        <!-- ====== ĐIỂM & LOẠI ====== -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="MaxScore" class="form-label">Điểm tối đa *</label>
                <input asp-for="MaxScore" type="number" class="form-control" placeholder="10" min="1" max="100" />
                <span asp-validation-for="MaxScore" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Type" class="form-label">Loại bài tập *</label>
                <select asp-for="Type" class="form-select">
                    <option value="Bài tập">Bài tập</option>
                    <option value="Bài kiểm tra">Bài kiểm tra</option>
                    <option value="Bài thi">Bài thi</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>

        <!-- ====== THỜI GIAN ====== -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="AvailableFrom" class="form-label">Bắt đầu từ</label>
                <input asp-for="AvailableFrom" type="datetime-local" class="form-control" />
                <span asp-validation-for="AvailableFrom" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="AvailableUntil" class="form-label">Hạn nộp</label>
                <input asp-for="AvailableUntil" type="datetime-local" class="form-control" />
                <span asp-validation-for="AvailableUntil" class="text-danger"></span>
            </div>
        </div>

        <!-- ====== NÚT HÀNH ĐỘNG ====== -->
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Assignment" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy2"></i> Cập nhật bài tập
            </button>
        </div>
    </form>
</div>

@section Scripts{
<script src="~/js/Instructor/Assignment/EditAssignment.js" asp-append-version="true"></script>
}