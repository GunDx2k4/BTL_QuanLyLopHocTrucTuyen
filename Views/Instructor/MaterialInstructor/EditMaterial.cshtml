@model BTL_QuanLyLopHocTrucTuyen.Models.Material
@{
    ViewData["Title"] = "Chỉnh sửa tài liệu";
    Layout = "~/Views/Instructor/Shared/_InstructorLayout.cshtml";
}

<!-- ========== CSS & Fonts ========== -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="~/css/Instructor/Material/EditMaterial.css" asp-append-version="true" />

<div class="content-main">
    <h3><i class="bi bi-pencil-square me-2"></i>Chỉnh sửa tài liệu</h3>

    <form id="materialForm" method="post" asp-action="EditMaterial" asp-controller="MaterialInstructor" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- ======= CHỌN BÀI HỌC ======= -->
        <div class="mb-3">
            <label asp-for="LessonId" class="form-label">Chọn bài học *</label>
            <select asp-for="LessonId" class="form-select">
                <option value="">-- Chọn bài học --</option>
                @foreach (var lesson in ViewBag.Lessons)
                {
                    <option value="@lesson.Id" selected="@(lesson.Id == Model.LessonId)">
                        @lesson.Title
                    </option>
                }
            </select>
            <span asp-validation-for="LessonId" class="text-danger"></span>
        </div>

        <!-- ======= TÊN TÀI LIỆU ======= -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Tên tài liệu *</label>
            <input asp-for="Title" class="form-control" placeholder="Nhập tên tài liệu..." />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- ======= MÔ TẢ ======= -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" rows="5" class="form-control" placeholder="Mô tả chi tiết (tùy chọn)..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- ======= LIÊN KẾT NGOÀI ======= -->
        <div class="mb-3">
            <label asp-for="ExternalFileUrl" class="form-label">Liên kết ngoài (Google Drive, PDF...)</label>
            <input asp-for="ExternalFileUrl" type="url" class="form-control" placeholder="Dán link tài liệu..." />
            <span asp-validation-for="ExternalFileUrl" class="text-danger"></span>
        </div>

        <!-- ======= UPLOAD FILE ======= -->
        <div class="mb-3">
            <label asp-for="UploadFile" class="form-label">Hoặc tải tệp từ máy (PDF, DOCX, ZIP...)</label>
            <input asp-for="UploadFile" type="file" class="form-control" accept=".pdf,.doc,.docx,.zip,.rar" />
            <span asp-validation-for="UploadFile" class="text-danger"></span>

            @if (!string.IsNullOrEmpty(Model.UploadedFileUrl))
            {
                <small class="text-muted d-block mt-2">
                    <i class="bi bi-file-earmark-text"></i> 
                    Tệp hiện tại: <a href="@Model.UploadedFileUrl" target="_blank">@Model.UploadedFileName</a>
                </small>
            }
        </div>

        <!-- ======= CÔNG KHAI / ẨN ======= -->
        <div class="form-check form-switch mb-4">
            <input asp-for="IsPublic" class="form-check-input" type="checkbox" id="isPublicSwitch" />
            <label class="form-check-label" for="isPublicSwitch">Công khai cho sinh viên</label>
        </div>

        <!-- ======= THỜI GIAN ======= -->
        <div class="mb-3">
            <label asp-for="UploadedAt" class="form-label">Thời gian đăng</label>
            <input asp-for="UploadedAt" type="datetime-local" class="form-control"
                   value="@Model.UploadedAt.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="UploadedAt" class="text-danger"></span>
        </div>

        <!-- ======= NÚT HÀNH ĐỘNG ======= -->
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Material" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy2"></i> Lưu thay đổi
            </button>
        </div>
    </form>
</div>

<!-- ========== JS ========== -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/Instructor/Material/EditMaterial.js" asp-append-version="true"></script>
