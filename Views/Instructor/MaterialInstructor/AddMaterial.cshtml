@model BTL_QuanLyLopHocTrucTuyen.Models.Material
@{
    ViewData["Title"] = "Add Material";
    Layout = "~/Views/Instructor/Shared/_InstructorLayout.cshtml";
}
<!DOCTYPE>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Instructor/Material/AddMaterial.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

</head>
<body>
    <div class="content-main">
        <h3><i class="bi bi-plus-circle"></i> Thêm tài liệu mới</h3>
        <form id="materialForm" method="post" asp-action="AddMaterial" asp-controller="MaterialInstructor">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-3">
                <label class="form-label">Chọn bài học *</label>
                <select asp-for="LessonId" class="form-select select-lesson">
                    <option value="">-- Chọn bài học --</option>
                    @foreach (var lesson in ViewBag.Lessons)
                    {
                        <option value="@lesson.Id">@lesson.Title</option>
                    }
                </select>
                
            </div>
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Tên tài liệu *</label>
                <input asp-for="Title" class="form-control" placeholder="Tên tài liệu ..." />
                <span asp-validation-for="Title" class="text-danger"></span> 
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <textarea asp-for="Description" rows="5" class="form-control" placeholder="Mô tả ..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span> 
            </div>

            <div class="mb-3">
                <label asp-for="FileUrl" class="form-label">File tài liệu</label>
                <input asp-for="FileUrl" class="form-control" placeholder="File tài liệu ..." />
                <span asp-validation-for="FileUrl" class="text-danger"></span> 
            </div>
            
            <div class="mb-3">
                <label asp-for="UploadedAt" class="form-label">Thời gian đăng</label>
                <input asp-for="UploadedAt" type="datetime-local" class="form-control" />
                <span asp-validation-for="UploadedAt" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Material" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-floppy2"></i> Lưu
                </button>
            </div>
        </form>

    </div> 
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/Instructor/Material/AddMaterial.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>



</body>
</html>