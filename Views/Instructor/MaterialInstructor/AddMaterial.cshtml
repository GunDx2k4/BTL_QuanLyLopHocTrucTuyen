@model BTL_QuanLyLopHocTrucTuyen.Models.Material
@{
    ViewData["Title"] = "Thêm tài liệu";
    Layout = "~/Views/Instructor/Shared/_InstructorLayout.cshtml";
}

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Instructor/Material/AddMaterial.css" asp-append-version="true" />

<div class="content-main">
    <h3><i class="bi bi-plus-circle"></i> Thêm tài liệu mới</h3>

    <form id="materialForm" method="post" 
          asp-action="AddMaterial" asp-controller="MaterialInstructor" 
          enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- ====================== CHỌN BÀI HỌC ====================== -->
        <div class="mb-3 position-relative lesson-search-wrapper">
            <label class="form-label">Chọn bài học *</label>
            <div class="input-wrapper position-relative">
                <input type="text" id="lessonSearch" class="form-control pe-5"
                       placeholder="Nhập tên bài học để tìm..." autocomplete="off">
                <button type="button" id="clearLesson" class="btn-clear" title="Xóa lựa chọn">&times;</button>
            </div>

            <ul id="lessonDropdown"
                class="list-group position-absolute w-100 shadow-sm"
                style="display:none; z-index:1050; max-height:200px; overflow-y:auto;">
                @foreach (var lesson in ViewBag.Lessons)
                {
                    <li class="list-group-item list-group-item-action" data-id="@lesson.Id">@lesson.Title</li>
                }
            </ul>

            <input type="hidden" name="LessonId" id="LessonId" />
        </div>

        <!-- ====================== TÊN VÀ MÔ TẢ ====================== -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Tên tài liệu *</label>
            <input asp-for="Title" class="form-control" placeholder="Nhập tên tài liệu..." />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" rows="4" class="form-control" placeholder="Mô tả chi tiết (tuỳ chọn)..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- ====================== FILE NGOÀI / UPLOAD ====================== -->
        <div class="mb-3">
            <label asp-for="ExternalFileUrl" class="form-label">Liên kết ngoài (Google Drive, PDF...)</label>
            <input asp-for="ExternalFileUrl" type="url" class="form-control" placeholder="Dán link tài liệu..." />
            <span asp-validation-for="ExternalFileUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UploadFile" class="form-label">Hoặc tải tệp từ máy (PDF, DOCX, ZIP...)</label>
            <input asp-for="UploadFile" type="file" class="form-control" accept=".pdf,.doc,.docx,.zip,.rar" />
            <span asp-validation-for="UploadFile" class="text-danger"></span>
        </div>

        <!-- ====================== CÔNG KHAI / ẨN ====================== -->
        <div class="form-check form-switch mb-4">
            <input asp-for="IsPublic" class="form-check-input" type="checkbox" id="isPublicSwitch" />
            <label class="form-check-label" for="isPublicSwitch">
                Công khai cho sinh viên
            </label>
        </div>

        <!-- ====================== NGÀY TẢI LÊN ====================== -->
        <div class="mb-3">
            <label asp-for="UploadedAt" class="form-label">Thời gian đăng</label>
            <input asp-for="UploadedAt" type="datetime-local" class="form-control"
                   value="@Model.UploadedAt.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="UploadedAt" class="text-danger"></span>
        </div>

        <!-- ====================== NÚT HÀNH ĐỘNG ====================== -->
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Material" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy2"></i> Lưu tài liệu
            </button>
        </div>
    </form>
</div>

<!-- ====================== SCRIPTS ====================== -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/Instructor/Material/AddMaterial.js" asp-append-version="true"></script>