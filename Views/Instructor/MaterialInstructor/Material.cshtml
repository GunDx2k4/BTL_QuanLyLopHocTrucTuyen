@model IEnumerable<BTL_QuanLyLopHocTrucTuyen.Models.Material>
@using System.Linq
@{
    ViewData["Title"] = "Lesson Page";
    Layout = "~/Views/Instructor/Shared/_InstructorLayout.cshtml";
}
<!DOCTYPE>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Instructor/Material/Material.css" asp-append-version="true" />
</head>
<body>
<div class="content-main">
    <!-- ===== Header ===== -->
    <div class="header-material">
        <h4><i class="bi bi-journal-text me-2"></i>Danh sách tài liệu</h4>
        <div class="header-actions">
            <div class="search-box">
                <i class="bi bi-search"></i>
                <input type="search" class="search-input" placeholder="Tìm kiếm tài liệu...">
            </div>

            <select class="form-select filter-select">
                <option value="">Tất cả bài học</option>
                @if (Model != null && Model.Any())
                {
                    foreach (var lesson in Model
                        .Where(m => m.Lesson != null)
                        .Select(m => m.Lesson)
                        .Distinct())
                    {
                        <option value="@lesson?.Id">@lesson?.Title</option>
                    }
                }
            </select>


            <a asp-controller="MaterialInstructor" asp-action="AddMaterial">
                <button class="btn-add"><i class="bi bi-plus-lg"></i> Thêm tài liệu</button>
            </a>
        </div>
    </div>

    <hr />

    <!-- ===== Danh sách tài liệu theo nhóm bài học ===== -->
    <div class="lesson-groups">
        @if (Model != null && Model.Any())
        {
            var grouped = Model.GroupBy(m => m.Lesson?.Title ?? "Khác");
            foreach (var group in grouped)
            {
                <div class="lesson-section" data-lesson-id="@group.First().LessonId">
                    <h6 class="lesson-title">
                        <i class="bi bi-book-fill me-2 text-primary"></i> @group.Key
                    </h6>


                    <div class="material-list">
                        @foreach (var m in group)
                        {
                            <div class="material-card">
                                <div class="material-info">
                                    <h6>@m.Title</h6>
                                    <p class="meta">
                                        <i class="bi bi-calendar-event"></i> @m.UploadedAt.ToString("dd/MM/yyyy")
                                        &nbsp;·&nbsp;
                                        <i class="bi bi-person-circle"></i> @(m.Uploader?.FullName ?? "Không rõ")
                                    </p>
                                </div>

                                <div class="material-actions">
                                    <a asp-action="EditMaterial" asp-route-id="@m.Id">
                                        <button class="btn-edit"><i class="bi bi-pencil"></i></button>
                                    </a>
                                    <button class="btn-delete" data-id="@m.Id"><i class="bi bi-trash"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center text-muted mt-4">Chưa có tài liệu nào được thêm.</p>
        }
    </div>
</div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/Instructor/Material/Material.js" asp-append-version="true"></script>
</body>
</html>