@model IEnumerable<BTL_QuanLyLopHocTrucTuyen.Models.Submission>
@{
    ViewData["Title"] = "Quản lý điểm số";
    Layout = "~/Views/Instructor/Shared/_InstructorLayout.cshtml";
}

<link rel="stylesheet" href="~/css/Instructor/Grade/Grade.css" asp-append-version="true" />

<div class="content-main grade-page">
    <div class="header-grade d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold text-primary"><i class="bi bi-bar-chart-steps me-2"></i>Quản lý điểm số</h4>

        <!-- Bộ lọc -->
        <div class="filter-course mt-3 mb-4 position-relative " data-current-course="@ViewBag.CurrentCourseId">
            <div class="input-wrapper position-relative">
                <input type="text" id="courseSearch" class="form-control pe-5"
                    placeholder="Chọn khóa học hoặc nhập tên..." autocomplete="off">
                <button type="button" id="clearCourse" class="btn-clear" title="Xóa lựa chọn">&times;</button>
            </div>

            <ul id="courseDropdown"
                class="list-group position-absolute w-100 shadow-sm"
                style="display:none; z-index:1050; max-height:220px; overflow-y:auto;">
                @foreach (var course in ViewBag.Courses)
                {
                    <li class="list-group-item list-group-item-action" data-id="@course.Id">@course.Name</li>
                }
            </ul>
        </div>

         <!-- Bộ lọc bài tập -->
        <div class="filter-assignment mt-3 mb-4 position-relative" data-current-assignment="@ViewBag.CurrentAssignmentId">
            <div class="input-wrapper position-relative">
                <input type="text" id="assignmentSearch" class="form-control pe-5"
                    placeholder="Chọn bài tập hoặc nhập tên..." autocomplete="off">
                <button type="button" id="clearAssignment" class="btn-clear" title="Xóa lựa chọn">&times;</button>
            </div>

            <ul id="assignmentDropdown"
                class="list-group position-absolute w-100 shadow-sm"
                style="display:none; z-index:1050; max-height:220px; overflow-y:auto;">
                @foreach (var assignment in ViewBag.Assignments)
                {
                    <li class="list-group-item list-group-item-action" data-id="@assignment.Id">
                        @assignment.Title
                    </li>
                }
            </ul>
        </div>


        </div>

    <!-- Bảng điểm -->
    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Học viên</th>
                    <th>Khóa học</th>
                    <th>Bài tập</th>
                    <th>Điểm</th>
                    <th>Ngày nộp</th>
                    <th>Trạng thái</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody id="gradeTableBody">
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">Chưa có bài nộp nào.</td>
                    </tr>
                }
                else
                {
                    foreach (var s in Model)
                    {
                        var isGraded = s.Grade.HasValue;
                        <tr>
                            <td>@s.Student?.FullName</td>
                            <td>@s.Assignment?.Lesson?.Course?.Name</td>
                            <td>@s.Assignment?.Title</td>
                            <td>
                                @if (isGraded)
                                {
                                    <span class="badge bg-success">@s.Grade</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Chờ</span>
                                }
                            </td>
                            <td>@s.SubmittedAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (isGraded)
                                {
                                    <span class="text-success fw-semibold">Đã chấm</span>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa chấm</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="DetailGrade" asp-route-id="@s.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <button class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/Instructor/Grade/Grade.js" asp-append-version="true"></script>
}


