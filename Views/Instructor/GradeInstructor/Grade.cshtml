@{
    ViewData["Title"] = "Quản lý điểm số";
    Layout = "~/Views/Instructor/Shared/_InstructorLayout.cshtml";
}

<link rel="stylesheet" href="~/css/Instructor/Grade/Grade.css" asp-append-version="true" />

<div class="content-main grade-page">
    <div class="header-grade d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold"><i class="bi bi-bar-chart-steps me-2"></i>Quản lý điểm số</h4>

        <!-- Bộ lọc -->
        <div class="filter-bar d-flex gap-2">
            <select class="form-select form-select-sm" id="filterCourse">
                <option selected>Tất cả khóa học</option>
                <option>Lập trình Web ASP.NET</option>
                <option>Cơ sở dữ liệu nâng cao</option>
            </select>

            <select class="form-select form-select-sm" id="filterAssignment">
                <option selected>Tất cả bài tập</option>
                <option>Bài tập 1 - SQL</option>
                <option>Bài kiểm tra giữa kỳ</option>
            </select>

            <select class="form-select form-select-sm" id="filterStatus">
                <option selected>Tất cả trạng thái</option>
                <option>Đã chấm</option>
                <option>Chưa chấm</option>
            </select>
        </div>
    </div>

    <!-- Bảng điểm -->
    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Học viên</th>
                    <th>Khóa học</th>
                    <th>Bài tập</th>
                    <th>Điểm</th>
                    <th>Ngày nộp</th>
                    <th>Trạng thái</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Nguyễn Văn A</td>
                    <td>Lập trình Web ASP.NET</td>
                    <td>Bài tập 1 - Controller</td>
                    <td><span class="badge bg-success">9.0</span></td>
                    <td>29/10/2025</td>
                    <td><span class="text-success fw-semibold">Đã chấm</span></td>
                    <td class="text-center">
                        <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#gradeDetailModal">
                            <i class="bi bi-eye"></i>
                        </button>
                        <button class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-pencil"></i>
                        </button>
                    </td>
                </tr>
                <tr>
                    <td>Trần Thị B</td>
                    <td>Cơ sở dữ liệu nâng cao</td>
                    <td>Bài kiểm tra giữa kỳ</td>
                    <td><span class="badge bg-warning text-dark">Chờ</span></td>
                    <td>31/10/2025</td>
                    <td><span class="text-muted">Chưa chấm</span></td>
                    <td class="text-center">
                
                        <a asp-controller="GradeInstructor" asp-action="DetailGrade" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye"></i>
                        </a>
                        <button class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-pencil"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


