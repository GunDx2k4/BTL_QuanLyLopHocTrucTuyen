@model BTL_QuanLyLopHocTrucTuyen.Models.Lesson
@{
    ViewData["Title"] = "Add Lesson";
    Layout = "~/Views/Instructor/Shared/_InstructorLayout.cshtml";
}
    <link rel="stylesheet" href="~/css/Instructor/Lesson/AddLesson.css" asp-append-version="true" />

    <div class="content-main">
        <h3><i class="bi bi-plus-circle"></i> Thêm bài học mới</h3>
        <form id="lessonForm" method="post" asp-action="AddLesson" asp-controller="LessonInstructor">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Tên bài học *</label>
                <input asp-for="Title" class="form-control" placeholder="Tên bài học ..." />
                <span asp-validation-for="Title" class="text-danger"></span> 
            </div>

            <div class="mb-3">
                <label asp-for="Content" class="form-label">Mô tả</label>
                <textarea asp-for="Content" rows="5" class="form-control" placeholder="Mô tả ..."></textarea>
                <span asp-validation-for="Content" class="text-danger"></span> 
            </div>

            <div class="mb-3">
                <label asp-for="VideoUrl" class="form-label">Link bài học</label>
                <input asp-for="VideoUrl" class="form-control" placeholder="Link bài học ..." />
                <span asp-validation-for="VideoUrl" class="text-danger"></span> 
            </div>

            <div class="mb-3">
                <label asp-for="BeginTime" class="form-label">Thời gian bắt đầu</label>
                <input asp-for="BeginTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="BeginTime" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EndTime" class="form-label">Thời gian kết thúc</label>
                <input asp-for="EndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Lesson" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-floppy2"></i> Lưu
                </button>
            </div>
        </form>

    </div> 

    <script src="~/js/Instructor/Lesson/AddLesson.js" asp-append-version="true"></script>
