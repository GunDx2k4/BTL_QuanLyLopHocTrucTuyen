@model BTL_QuanLyLopHocTrucTuyen.Models.Lesson
@{
    ViewData["Title"] = "Edit Lesson";
    Layout = "~/Views/Instructor/Shared/_InstructorLayout.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Instructor/Lesson/EditLesson.css" asp-append-version="true" />
</head>

<body>
<div class="content-main">
    <h3><i class="bi bi-pencil-square"></i> Sửa bài học</h3>

    <form id="lessonForm" method="post" asp-action="EditLesson" asp-controller="LessonInstructor">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Tên bài học *</label>
            <input asp-for="Title" class="form-control" placeholder="Nhập tên bài học..." />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label">Mô tả</label>
            <textarea asp-for="Content" rows="4" class="form-control" placeholder="Nhập mô tả ngắn..."></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="VideoUrl" class="form-label">Đường dẫn video</label>
            <input asp-for="VideoUrl" class="form-control" placeholder="Ví dụ: https://youtube.com/..." />
            <span asp-validation-for="VideoUrl" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="BeginTime" class="form-label">Thời gian bắt đầu</label>
                <input asp-for="BeginTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="BeginTime" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="EndTime" class="form-label">Thời gian kết thúc</label>
                <input asp-for="EndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Lesson" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy2"></i> Lưu thay đổi
            </button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/Instructor/Lesson/EditLesson.js" asp-append-version="true"></script>
</body>
</html>
