@model BTL_QuanLyLopHocTrucTuyen.Models.Lesson
@{
    ViewData["Title"] = "Edit Lesson";
    Layout = "~/Views/Instructor/Shared/_InstructorLayout.cshtml";
}

<link rel="stylesheet" href="~/css/Instructor/Lesson/EditLesson.css" asp-append-version="true" />

<div class="content-main">
    <h3><i class="bi bi-pencil-square"></i> Sửa bài học</h3>

    <form id="lessonForm" method="post" asp-action="EditLesson" asp-controller="LessonInstructor">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Tên bài học *</label>
            <input asp-for="Title" class="form-control" placeholder="Nhập tên bài học..." />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label">Mô tả</label>
            <textarea asp-for="Content" rows="4" class="form-control" placeholder="Nhập mô tả ngắn..."></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="VideoUrl" class="form-label">Đường dẫn video</label>
            <input asp-for="VideoUrl" class="form-control" placeholder="Ví dụ: https://youtube.com/..." />
            <span asp-validation-for="VideoUrl" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="BeginTime" class="form-label">Thời gian bắt đầu</label>
                <input asp-for="BeginTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="BeginTime" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="EndTime" class="form-label">Thời gian kết thúc</label>
                <input asp-for="EndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Lesson" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy2"></i> Lưu thay đổi
            </button>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/js/Instructor/Lesson/EditLesson.js" asp-append-version="true"></script>
}