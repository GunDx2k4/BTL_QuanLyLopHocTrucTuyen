@model BTL_QuanLyLopHocTrucTuyen.Models.Lesson
@using System.Linq

@{
    ViewData["Title"] = "Detail Lesson";
    Layout = "~/Views/Instructor/Shared/_InstructorLayout.cshtml";

    // ✅ Chuyển URL "watch?v=" thành "embed/"
    string videoUrl = "";
    if (!string.IsNullOrWhiteSpace(Model.VideoUrl))
    {
        videoUrl = Model.VideoUrl.Trim();

        if (videoUrl.Contains("watch?v="))
            videoUrl = videoUrl.Replace("watch?v=", "embed/");
        else if (videoUrl.Contains("youtu.be/"))
            videoUrl = videoUrl.Replace("youtu.be/", "www.youtube.com/embed/");

        int index = videoUrl.IndexOf("&");
        if (index > 0)
            videoUrl = videoUrl.Substring(0, index);
    }

    // ✅ Giả lập danh sách bài học khác (trong thực tế bạn sẽ lấy từ database)
    var relatedLessons = ViewBag.AllLessons as List<BTL_QuanLyLopHocTrucTuyen.Models.Lesson>;

    BTL_QuanLyLopHocTrucTuyen.Models.Lesson? prevLesson = null;
    BTL_QuanLyLopHocTrucTuyen.Models.Lesson? nextLesson = null;

    if (relatedLessons != null)
    {
        var currentIndex = relatedLessons.FindIndex(x => x.Id == Model.Id);

        if (currentIndex > 0)
        {
            prevLesson = relatedLessons[currentIndex - 1];
        }

        if (currentIndex >= 0 && currentIndex < relatedLessons.Count - 1)
        {
            nextLesson = relatedLessons[currentIndex + 1];
        }
    }
}


    <link rel="stylesheet" href="~/css/Instructor/Lesson/DetailLesson.css" asp-append-version="true" />

<div class="content-main">

    <!-- ==== CHI TIẾT BÀI HỌC ==== -->
    <div class="detail-lesson">
        <h3><i class="bi bi-eye"></i> @Model.Title</h3>
        <p class="text-muted">@Model.Content</p>
        <hr />

        <p><i class="bi bi-calendar-event"></i> 
            <strong>Thời gian:</strong> 
            @Model.BeginTime.ToString("HH:mm dd/MM/yyyy") 
            → @Model.EndTime.ToString("HH:mm dd/MM/yyyy")
        </p>

        <p>
            <i class="bi bi-activity"></i> 
            <strong>Trạng thái:</strong>
            <span class="badge bg-@Model.Status.ToString().ToLower()">@Model.Status</span>
        </p>

        @if (!string.IsNullOrEmpty(videoUrl))
        {
            <div class="ratio ratio-16x9 mb-4">
                <iframe src="@videoUrl"
                        title="Video bài học"
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen>
                </iframe>
            </div>
        }
        else
        {
            <p class="text-muted fst-italic">Chưa có video cho bài học này.</p>
        }

        <div class="mt-4">
            <h6><i class="bi bi-journal-text"></i> Tài liệu</h6>
            @if (Model.Materials != null && Model.Materials.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach (var m in Model.Materials)
                    {
                        <li class="list-group-item">
                            <a href="@m.ExternalFileUrl" target="_blank">@m.Title</a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted fst-italic">Chưa có tài liệu nào.</p>
            }
        </div>

        <div class="mt-4">
            <h6><i class="bi bi-pencil-square"></i> Bài tập</h6>
            @if (Model.Assignments != null && Model.Assignments.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach (var a in Model.Assignments)
                    {
                        <li class="list-group-item">@a.Title</li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted fst-italic">Chưa có bài tập nào.</p>
            }
        </div>

        <div class="lesson-navigation">
            <a asp-action="Lesson" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>

            <div class="d-flex gap-2">
                @if (prevLesson != null)
                {
                    <a asp-action="DetailLesson" asp-route-id="@prevLesson.Id" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Bài trước
                    </a>
                }

                @if (nextLesson != null)
                {
                    <a asp-action="DetailLesson" asp-route-id="@nextLesson.Id" class="btn btn-primary">
                        Bài tiếp theo <i class="bi bi-arrow-right"></i>
                    </a>
                }
                else
                {
                    <button class="btn btn-primary" disabled>
                        Bài tiếp theo <i class="bi bi-arrow-right"></i>
                    </button>
                }
            </div>
        </div>


    </div>

    <!-- ==== DANH SÁCH BÀI HỌC KHÁC ==== -->
    <div class="list-lesson">
        <h5><i class="bi bi-collection"></i> Danh sách bài học</h5>
        <hr />
        @if (relatedLessons != null && relatedLessons.Any())
        {
            <ul class="list-group">
                @foreach (var item in relatedLessons)
                {
                    <li class="list-group-item @(item.Id == Model.Id ? "active-lesson" : "")">
                        <a asp-action="DetailLesson" asp-route-id="@item.Id">@item.Title</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted fst-italic">Không có bài học khác.</p>
        }
    </div>

</div>

